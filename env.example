# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@your_host:5432/postgres

# Supabase Configuration (Optional - for enhanced features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Security
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters
JWT_SECRET=your-jwt-secret-key

# Server Configuration
NODE_ENV=development
PORT=5000

# Application URLs
APP_BASE_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api
APP_URL=http://localhost:5000

# Default Business Settings
DEFAULT_CURRENCY=AUD
DEFAULT_TAX_RATE=0.10
DEFAULT_DEPOSIT_PERCENTAGE=0.30

# Development Mode (set to 'true' to require database)
PV_REQUIRE_DB=false

# Feature flags for additive enhancements (defaults OFF)
REDIS_ENABLED=false
SENTRY_NODE_ENABLED=false
PRICING_RULES_ENABLED=false
PAYMENT_TRACKING_ENABLED=false
BRUTE_FORCE_PROTECTION_ENABLED=false

# n8n Integration (for AI Enhancement workflows)
N8N_WEBHOOK_URL=https://easyflowai.app.n8n.cloud/webhook-test/enhancement
N8N_WEBHOOK_SECRET=your-random-secret-string-here-minimum-32-characters
