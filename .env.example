# Database
DATABASE_URL=postgresql://username:password@localhost:5432/poolvisual

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Supabase (if using Supabase-hosted Postgres)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe Payment Processing
# Get these from: https://dashboard.stripe.com/apikeys (Secret key)
# and https://dashboard.stripe.com/webhooks (Webhook secret)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Note: For production, use live keys (sk_live_...)
# For testing, use test keys (sk_test_...)
# See STRIPE_CONFIGURATION.md for detailed setup instructions

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key

# File Storage & CDN
STORAGE_BUCKET=poolvisual-uploads
STORAGE_REGION=ap-southeast-2

# Analytics & Monitoring
POSTHOG_KEY=phc_your_posthog_key
POSTHOG_HOST=https://us.posthog.com
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application URLs
APP_BASE_URL=http://localhost:5000
API_BASE_URL=http://localhost:5000/api

# Default Business Settings
DEFAULT_CURRENCY=AUD
DEFAULT_TAX_RATE=0.10
DEFAULT_DEPOSIT_PERCENTAGE=0.30

# Background Jobs & Queue
QUEUE_DRIVER=pgboss
REDIS_URL=redis://localhost:6379

# Server Configuration
NODE_ENV=development
PORT=5000

# Image Processing
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Security
CORS_ORIGIN=http://localhost:5000
SESSION_SECRET=your-session-secret-key
