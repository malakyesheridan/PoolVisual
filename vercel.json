{
  "version": 2,
  "name": "poolvisual",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**", "public/**", "dist/**"],
        "maxDuration": 30
      }
    }
  ],
  "functions": {
    "server/index.ts": {
      "excludeFiles": "node_modules/@sparticuz/chromium/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
