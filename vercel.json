{
  "version": 2,
  "name": "poolvisual",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**", "public/**", "dist/**"],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!.*\\..*|api).*)",
      "destination": "/index.html"
    }
  ]
}