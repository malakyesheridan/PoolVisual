{
  "version": 2,
  "name": "poolvisual",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**"],
        "maxDuration": 30
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "shared/**"],
        "maxDuration": 60
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/quotes/:id/pdf",
      "destination": "/api/quotes/[id]/pdf"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
